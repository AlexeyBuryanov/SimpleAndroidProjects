<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alexey.simplecalc2.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/content_main">

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/resultField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/operationField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:inputType="phone"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor"
        />

    <Button
        android:id="@+id/button_reset"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:onClick="buttonReset_onClick"
        android:text="Сброс"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editNumber"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_erase"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:onClick="buttonErase_onClick"
        android:text="←"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_reset"
        app:layout_constraintTop_toTopOf="@+id/button_reset"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_7"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reset"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_8"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_reset"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_9"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button_reset"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_4"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_5"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toBottomOf="@+id/button_8"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_6"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toBottomOf="@+id/button_9"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_3"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/button_6"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_2"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/button_5"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_1"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_4"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_0"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onNumberClick"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_comma"
        app:layout_constraintTop_toBottomOf="@+id/button_2"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_comma"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onOperationClick"
        android:text=","
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_equally"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="onOperationClick"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_0"
        app:layout_constraintTop_toBottomOf="@+id/button_3"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_divide"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:onClick="onOperationClick"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintTop_toBottomOf="@+id/button_erase"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_multiply"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:onClick="onOperationClick"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintTop_toBottomOf="@+id/button_divide"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_minus"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:onClick="onOperationClick"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/button_plus"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:onClick="onOperationClick"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button_equally"
        app:layout_constraintTop_toBottomOf="@+id/button_minus"
        tools:ignore="HardcodedText"
        />
</android.support.constraint.ConstraintLayout>